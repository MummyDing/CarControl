<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_bg"
        app:titleTextColor="#fff"
        />
    <Button
        android:id="@+id/control"
        android:text="智能控制"
        android:textSize="18sp"
        android:textColor="#fff"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/ic_width"
        android:layout_above="@+id/video_monitor"
        android:layout_marginBottom="@dimen/ic_width"
        android:layout_centerHorizontal="true"
        android:background="@color/btn_bg"
        />
    <Button
        android:id="@+id/video_monitor"
        android:text="视频监控"
        android:textSize="18sp"
        android:textColor="#fff"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/ic_width"
        android:background="@color/btn_bg"
        />
    <Button
        android:id="@+id/info"
        android:text="监控信息"
        android:textSize="18sp"
        android:textColor="#fff"
        android:layout_below="@+id/video_monitor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ic_width"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/ic_width"
        android:background="@color/btn_bg"
        />
    <TextView
        android:text="计算机科学协会(ACS)\n"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        />
    <TextView
        android:text="软件组 MummyDing "
        android:gravity="center"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/btn_distance"
        />
</RelativeLayout>
